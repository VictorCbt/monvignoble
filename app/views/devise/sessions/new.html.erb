<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
      <div class="user_card">
        <div class="d-flex justify-content-center">
          <div class="brand_logo_container">
            <img src="http://localhost:3000/assets/logo-9b970bfc81e3436cfa576e74e4560b5bd131eb808d096ad1af6e1ad0118c511d.png" class="brand_logo" alt="Logo">
          </div>
        </div>
        <div class="d-flex justify-content-center form_container">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <form>

            <div class="input-group mb-3">
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-user"></i></span>
              </div>
                <div>
                    <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: 'email',
                    input_html: { autocomplete: "email" },
                    label: false %>
                </div>
            </div>
            <div class="input-group mb-2">
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
              </div>
              <div>
                <%= f.input :password,
                required: false,
                placeholder: 'password',
                input_html: { autocomplete: "current-password" },
                label: false %>
              </div>
            </div>
            <div class="form-group">
              <div class="custom-checkbox">
                <%= f.input :remember_me,  as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>
            <div class="d-flex justify-content-center mt-3 login_container">
              <button class="btn login_btn text-white"><%= f.button :submit, "Connexion" %></button>
           </div>
           <% end %>
          </form>
        </div>

        <div >
            <div class="justify-content-center align px-4 m-2 pt-1 ">
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

