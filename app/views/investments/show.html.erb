<div class="banner-investment"></div>
      <!--  CONTENT -->
  <br>
  <br>

      <div class="col-md-12 text-center">
        <h1> <strong> <%= @investment.investment_name %> </strong></h1>
        <p><%= @investment.punchline %></p>
        <span class="BPDUh"></span>
        <br>
      </div>

<div class="container">
    <div class="row investment-title">

      <div class="col-8">
        <%= cl_image_tag @investment.photo.key, crop: :fill, class: "image-invests" if @investment.photo.attached? %>
      </div>

      <div class="col-4">
        <div class="d-flex">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large-invest", alt: "avatar-large" %>
          <div class="align-self-center ml-3"><h4><strong><%= @investment.user.first_name %> <%= @investment.user.last_name %></strong></h4></div>
        </div>

        <div class="d-flex" >
          <div class="align-self-center">
            <%= image_tag("wine1.png", class: "image-domaine") %>
          </div>
          <div class="align-self-center ml-3">
            <h4 class="pt-3"><%= @investment.designation %></h4>
            <p class=""> <%= @investment.region  %> </p>
          </div>
        </div>
        <div class="progression d-flex ">

          <div class="align-self-center">
            <%= image_tag("project.png", class: "image-project") %>
          </div>
          <div class="align-self-center ml-3">
             <h3 class="title-invstment"><strong><%= number_to_currency(@investment.investment_total, precision: 0, :unit => " €  ") %></strong></h3>
          </div>

        </div>

        <hr>
        <% @investment.groups.each do |group|  %>


        <div class="d-flex" >
          <div class="align-self-center">
            <p><%= image_tag "https://dwj199mwkel52.cloudfront.net/assets/lewagon-logo-square-fe76916e1b923ade71e253ae6dc031d936e5e8eebac4e26b0fbac650ea6ee360.png", class: "avatar-bordered", alt: "avatar-bordered" %></p>
          </div>
          <div class="align-self-center ml-3">
            <p class=""> <%= group.name %> </p>
          </div>
        </div>

        <div class="d-flex" >
          <div class="align-self-center">

            <% i_total = @investment.investment_total %>
            <% i_collect = i_total - group.investment_total %>
            <% ticket = @investment.ticket_amount %>

            <p>collectés : <h5 style="color:#86B04A"><strong><%= number_to_currency(i_total - group.investment_total, precision: 0, :unit => " €  ") %></strong></h5></p>
            <div class="progress">
                 <div class="progress-bar" role="progressbar" aria-valuenow="<%=(i_collect*100/i_total)%>" aria-valuemin="<%=(i_collect*100/i_total)%>" aria-valuemax="100"></div>
              </div>
            <progress value="<%=(i_collect*100/i_total)%>" max="100">
          </div>

          <div class="align-self-center ml-3">
            <p><strong> <h5 style="color:#86B04A"><%= (((i_total) - (i_collect)) / (ticket)) %></strong></h5>parts restantes </p>
            <button type="button" id="sweet-alert-demo" class="btn-investment w-100", onClick="document.getElementById('sweet-alert-demo').disabled = 'disabled'" >Rejoindre</button>
          </div>
        </div>
          <p> <%#= link_to group.name, join_request_group_users_groups_path(group) %> </p>
        <hr>
        <% end %>


        <p class="title-invstment text-center"> <small>A partir de : </small><strong>€ <%= @investment.ticket_amount %></strong> le ticket</p>
<!--         <p class="title-invstment text-center"> <small>Fin du projet le : </small><strong>€ <%= @investment.date_of_end %></strong> le ticket</p>
<!--  <-->   <!-- button type="button" class=" w-50 text-center"> épingler cet investissement</button> -->
   </div>
    </div>

</div>

