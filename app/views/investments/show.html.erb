  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="left-element">

          <div class="exp-desc">
            <h2> <strong><%= @investment.domaine_name %></strong> </h2>
            <div id="prod"class="key">
              <ul>
                <p><%= @investment.description  %> </p>
              </ul>

              <ul>
                <li> <%= image_tag("wine.png", class: "image-wine") %><%= image_tag("wine.png", class: "image-wine") %><%= image_tag("wine.png", class: "image-wine") %></li>
                <%= @investment.remuneration %>
                <li></li>
                <li></li>
                <li><%= image_tag("plant.png", class: "image-money") %></li>
                <%= @investment.profitability  %> %
                <li></li>
                <li></li>
                <li></li>
                <li></li>
                <li><%= image_tag("money2.png", class: "image-money") %></li>
                <%= @investment.winemaker_profile %>
               </ul>

            </div>
          </div>

           <div class="exp-desc">


          </div>



        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="right-element">
          <div class="day-left">

          </div>
          <h4 class="text-center pb-1"> <strong>Evénements</strong> </h4>
        </div>

        <% @investment.offered_services.each do |offer| %>
          <div class="card card-product text-center">
            <div class="card-description product">
              <div class="icon text-center">
                <%= image_tag("Tickets.png", class: "image-ticket") %>
              </div>
              <span><strong> <%= offer.title %></strong> </span>
              <hr class="product">
              <p class="ticket-number p-2"><%= offer.description %></p>

            </div>
          </div>
          <br>
        <% end %>

      </div>
    </div>
  </div>
