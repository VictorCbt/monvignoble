<body class="body-investment">

<div class="col-md-12 text-center">
  <h1> <strong> <%= @investment.investment_name %> </strong></h1>
  <h5 class="pb-3 pt-2"><%= @investment.punchline %></h5>
  <span class="BPDUh"></span>
  <br>
</div>
<div class="container">
  <div class="row investment-title">
    <div class="col-8">
      <%= cl_image_tag @investment.photo.key, crop: :fill, class: "image-invests" if @investment.photo.attached? %>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="right-element">
        <div class="day-left">
        </div>
      </div>
      <div class="card card-product text-center p-3 card-red">
        <div class="card-description product">
          <div class="icon text-center pb-3 pt-3">
            <%= image_tag(@investment.user.avatar, class: "avatar-large-invest w-2", alt: "avatar-large")  %>
          </div>
          <div>
            <div class="align-self-center ml-3"><h4><strong><%= @investment.user.first_name %> <%= @investment.user.last_name %></strong></h4></div>
          </div>
        </div>
        <hr>
        <div class="card-description product">
          <div class="icon text-center">
            <%= image_tag("wine1.png", class: "image-domaine") %>
          </div>
          <div>
            <h4 class="pt-3"><%= @investment.designation %></h4>
            <p class="mb-0"> <%= @investment.region  %> </p>
          </div>
        </div>
        <hr>
        <div class="card-description product">
          <div class="icon text-center pb-0">
            <%= image_tag("startup.png", class: "image-project") %>
          </div>
          <div>
            <h2 class="title-invstment pt-2"><strong><%= number_to_currency(@investment.investment_total, precision: 0, :unit => " €  ") %></strong></h2>
            <div>
              <small>A partir de</small>
              <h5 class="title-invstment"> € <strong> <%= @investment.ticket_amount %></strong><small> / ticket</h5></small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<div class="exp-show ">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <div class="left-element">
        <div class="align-items-center">
          <h2> <strong><%= @investment.domaine_name %></strong> </h2>
          <div id="prod"class="key groupe-progress">
            <div> <p><%= @investment.description  %> </p> </div>
              <hr>

          <div class="d-flex">
            <div>
              <p class="ml-3"><%= image_tag("wine.png", class: "image-wine") %><%= image_tag("wine.png", class: "image-wine") %><%= image_tag("wine.png", class: "image-wine") %></p>
              <p class="ml-3"><%= image_tag("plant.png", class: "image-money") %></p>
              <p class="ml-3"> <%= image_tag("money2.png", class: "image-money") %></p>
            </div>

            <div >
              <p class="ml-4 pb-2 pt-2"> <small><strong>Bouteilles/an: </strong></small> </p>
              <p class="mr-3 ml-4 pb-3 pt-3"> <small><strong>Rendement: </strong></small></p>
              <p class="mr-3 ml-4 pb-3 pt-3"> <small><strong>Vigneron: </strong></small></p>

            </div>

            <div class="pr-2">
              <p class='pb-2 pt-2 pl-4'> <%= @investment.remuneration %></p>
              <p class='pb-3 pt-3 pl-4'><%= @investment.profitability  %> %</p>
              <p class='pb-3 pt-3 pl-4'><%= @investment.winemaker_profile %></p>
            </div>
              <p class="pl-4"><% if @investment.bio == true %>
                    <%= image_tag "https://nibuniconnu.fr/wp-content/uploads/2018/08/mise-avant.png", class:"wine-bio" %>
                  <% else  %>
                    <%= ""%>
                  <% end  %></p>
            <div>
            </div>
          </div>


          </div>
        </div>
        <br>

        <h3 class="mb-2"><strong>Groupes intérresés</strong></h3>

        <div class="exp-desc groupe-progress ">
          <%= render 'show_groups', investment: @investment %>
        </div>
      </div>
    </div>


    <div class="col-xs-12 col-md-4">

      <div class="right-element">
        <div class="day-left"></div>
        <h3 class="text-center pb-3 pb-2"> <strong>Evénements</strong> </h3>
      </div>

      <% @investment.offered_services.each do |offer| %>
      <div class="card card-product text-center card-red">
        <div class="card-description product">
          <div class="icon text-center pt-2"> <%= image_tag("ticket.png", class: "image-ticket") %></div>
          <span style="color:#a23e48"><strong> <%= offer.title %></strong> </span>
          <hr class="product">
          <p class="ticket-number p-2" style="color:#a23e48"><%= offer.description %></p>
        </div>
      </div>
      <br>
      <% end %>
    </div>

  </div>
</div>

</body>
